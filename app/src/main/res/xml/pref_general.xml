<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:id="@+id/blindMode"
        android:defaultValue="true"
        android:key="blind_mode"
        android:summary="@string/blind_description"
        android:title="@string/blind_mode" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="random_order"
        android:title="@string/order_of_question" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="random_answers"
        android:title="@string/random_answers" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="dark_mode"
        android:summary="@string/reload"
        android:title="@string/dark_mode" />
</PreferenceScreen>
